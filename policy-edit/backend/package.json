{
  "name": "idobata-policy-editor-backend",
  "version": "1.0.0",
  "description": "Backend for GitHub repository browser with MCP-enabled chatbot",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:mcp": "cd ../mcp && npm run build",
    "start": "node build/index.js",
